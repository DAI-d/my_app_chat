.wrapper
  = render 'devise/shared/side-var-super'
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          = @group.name
        .main-header__left-box__menber-box
          - @group.users.each do |user|
            .main-header__left-box__member-list
              = image_tag user.image.url, class: 'message__user-image'
      .main-header__right-box
        .main-header__right-box__edit-btn
          = link_to 'Edit', edit_group_path(@group)
    .messages
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'